<Window x:Class="Visualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Closed="Window_Closed">
    <Grid>
        <Image Margin="12,12,77,12" Name="imageVisualize" Stretch="Fill" />
        <Button Content="Start" Height="27" Margin="0,12,12,0" Name="buttonStart" VerticalAlignment="Top" Click="buttonStart_Click" HorizontalAlignment="Right" Width="59" />
        <Button Content="Pause" Height="27" HorizontalAlignment="Right" Margin="0,45,12,0" Name="buttonPause" VerticalAlignment="Top" Width="59" Click="buttonPause_Click" />
        <Button Content="Stop" Height="27" HorizontalAlignment="Right" Margin="0,78,12,0" Name="buttonStop" VerticalAlignment="Top" Width="59" Click="buttonStop_Click" />
    </Grid>
</Window>
